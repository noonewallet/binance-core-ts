{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "compilerOptions": {
    "lib": ["es2021", "dom", "dom.iterable"],
    "baseUrl": "./src",
    "paths": {
      "@helpers/*": ["helpers/*"],
      "@BNB/*": ["BNB/*"]
    },
    "module": "commonjs",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true
  },
  "include": ["src/**/*"]
}
